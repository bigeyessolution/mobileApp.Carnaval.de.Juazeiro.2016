<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bigeyessolution.CarnaJuaApp" version="0.5.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="UniversalAnalytics">
        <param name="android-package" value="com.danielcwilson.plugins.analytics.UniversalAnalyticsPlugin" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/icon/android/ldpi.png" />
    <icon density="mdpi" src="res/icon/android/mdpi.png" />
    <icon density="hdpi" src="res/icon/android/hdpi.png" />
    <icon density="xhdpi" src="res/icon/android/xhdpi.png" />
    <splash density="port-hdpi" src="res/screen/android/hdpi/port.png" />
    <splash density="port-ldpi" src="res/screen/android/ldpi/port.png" />
    <splash density="port-mdpi" src="res/screen/android/mdpi/port.png" />
    <splash density="port-xhdpi" src="res/screen/android/xhdpi/port.png" />
    <splash density="land-hdpi" src="res/screen/android/hdpi/land.png" />
    <splash density="land-ldpi" src="res/screen/android/ldpi/land.png" />
    <splash density="land-mdpi" src="res/screen/android/mdpi/land.png" />
    <splash density="land-xhdpi" src="res/screen/android/xhdpi/land.png" />
    <name>CarnaJuaApp</name>
    <description>
        O aplicativo oficial do Carnaval 2016 de Juazeiro, Bahia.
    </description>
    <author email="contato@bigeyessolution.com" href="http://bigeyessolution.com">
        Big Eyes Solution Team
    </author>
    <content src="index.html" />
    <preference name="Orientation" value="portrait" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="BackgroundColor" value="0xffffcd00" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
